							button.slider-prev-button.slider-arrow
								svg(width="11" height="20" viewBox="0 0 11 20" fill="none" xmlns="http://www.w3.org/2000/svg")
									path(d="M2.1952 10.1109L10.5165 1.7896C10.8041 1.50189 10.8041 1.03542 10.5165 0.747706C10.2287 0.460075 9.76229 0.460075 9.47457 0.747706L0.632349 9.58993C0.344718 9.87765 0.344718 10.3441 0.632349 10.6318L9.47457 19.4741C9.7673 19.7568 10.2338 19.7486 10.5165 19.4559C10.7922 19.1704 10.7922 18.7177 10.5165 18.4322L2.1952 10.1109Z" fill="#404040")
